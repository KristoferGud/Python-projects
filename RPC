
npc = random.randint(1,3)
player = input("Rock, Paper or Scissors?")

if npc == 1 and player == "paper":
    print("You win!")
    print("The npc chose rock")

if npc == 1 and player == "Scissors":
    print("You lose!")
    print("The npc chose rock")

if npc == 2 and player == "Rock":
    print("You lose!")
    print("The npc chose paper")

if npc == 2 and player == "Scissors":
    print("You win!")  
    print("The npc chose paper")  

if npc == 3 and player == "paper":
    print("You lose!")  
    print("The npc chose Scissors") 

if npc == 3 and player == "Rock":
    print("You win!") 
    print("The npc chose Scissors")    
