import random 

count = 0
total = 0

loop_controle = True
while loop_controle == True:
     rng = random.randint(1,2)
     if rng == 1:
         count -= 1
         total += 1
     if rng == 2:
         count += 1
         total += 1
     print(count)

     if count == 10: 
        print(f"THAT TOOK {total} MANY TIMES!")
        loop_controle = False
